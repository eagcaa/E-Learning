@model List<Entity.Content>

@{
    ViewData["Title"] = "Content List";
}

<h2>Content List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>File Path</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var content in Model)
        {
            <tr>
                <td>@content.ContentId</td>
                <td>@content.Title</td>
                <td>@content.Description</td>
                <td>@content.Type</td>
                <td>@content.FilePath</td>
                <td>
                    <a asp-action="ContentDetails" asp-route-id="@content.ContentId">Details</a> |
                    <a asp-action="ContentsByType" asp-route-contentType="@content.Type">Contents by Type</a>
                </td>
            </tr>
        }
    </tbody>
</table>
