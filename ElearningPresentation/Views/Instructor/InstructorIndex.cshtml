@model List<Entity.Instructor>

<h2>Instructors</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Bio</th>
            <th>Instructor Type</th>
            <th>Courses</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.InstructorId</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.Bio</td>
                <td>@instructor.InstructorType</td>

                <td>
                    @foreach (var course in instructor.Courses)
                    {
                        <p>@course.Title</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
